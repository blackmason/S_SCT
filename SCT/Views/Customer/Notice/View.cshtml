@{
    ViewBag.Title += " / 공지사항";
    Layout = "~/Views/_Layouts/MainLayout.cshtml";
}

<h3>@ViewBag.Title</h3>

<div class="bbs_wrapper">
    <a href="/Customer/Notice"><span class="btn_bbs_span">목록</span></a>
</div>
<table class="tbl_bbs">
    <tr>
        <th>작성자</th>
        <td class="td_contents"><span>@Model.Author</span></td>
        <th>작성일</th>
        <td class="td_contents"><span>@Model.Created</span></td>
    </tr>
    <tr>
        <th>제목</th>
        <td class="td_contents"><span>@Model.Subject</span></td>
        <th>조회수</th>
        <td class="td_contents"><span>@Model.Visit</span></td>
    </tr>
    <tr>
        <td colspan="4" class="td_contents"><span class="contents_body">@Html.Raw(@Model.Contents)</span></td>
    </tr>
</table>

<div class="bbs_wrapper">
    <a href="/Customer/Notice"><span class="btn_bbs_span">목록</span></a>
    <a href="/Customer/Notice/Edit/@Model.No"><span class="btn_bbs_span">수정</span></a>
    <a href="/Customer/Notice/Delete/@Model.No"><span class="btn_bbs_span btn_delete">삭제</span></a>
</div>
<script>
    $(document).ready(function () {
        $('.btn_delete').click(function () {
            var r = confirm("삭제?")

            if (r == true) {
                return true;
            } else {
                return false;
            }

        })
    })
</script>